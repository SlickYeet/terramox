{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch run src/server.ts",
    "build": "bun run build src/server.ts --outfile dist/server.js",
    "start": "bun run dist/server.js",
    "format": "prettier '**/*.{mjs,ts,tsx,md,json}' --ignore-path ../../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --write",
    "format:check": "prettier '**/*.{mjs,ts,tsx,md,json}' --ignore-path ../../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --check",
    "typecheck": "tsc",
    "clean": "rm -rf .turbo node_modules"
  },
  "dependencies": {
    "@terramox/api": "*",
    "@terramox/db": "*",
    "@terramox/env": "*",
    "express": "^5.1.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/bun": "latest",
    "@types/express": "^5.0.5",
    "prettier": "^3.6.2"
  }
}
